CREATE PROCEDURE [dbo].[cy_Groups_DeleteByModule]

/*
Author:				Joe Audette
Created:			2009-06-22
Last Modified:		2009-06-22

*/

@ModuleID			int

AS

DELETE FROM [dbo].cy_GroupPosts
WHERE TopicID IN (SELECT TopicID FROM [dbo].cy_GroupTopics WHERE GroupID IN
(SELECT ItemID FROM [dbo].cy_Groups WHERE ModuleID = @ModuleID ) )

DELETE FROM [dbo].cy_GroupTopicSubscriptions
WHERE TopicID IN (SELECT TopicID FROM [dbo].cy_GroupTopics WHERE GroupID IN
(SELECT ItemID FROM [dbo].cy_Groups WHERE ModuleID = @ModuleID) )

DELETE FROM [dbo].cy_GroupTopics
WHERE GroupID IN
(SELECT ItemID FROM [dbo].cy_Groups WHERE ModuleID = @ModuleID )

DELETE FROM [dbo].cy_GroupSubscriptions
WHERE GroupID IN
(SELECT ItemID FROM [dbo].cy_Groups WHERE ModuleID = @ModuleID) 

DELETE FROM cy_Groups
WHERE ModuleID = @ModuleID


GO

